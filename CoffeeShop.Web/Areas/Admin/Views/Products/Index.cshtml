@using Shared.Dtos.ProductDtos
@model List<ProductDto>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div>
        <a asp-action="Create" class="btn btn-success">Tạo sản phẩm mới</a>
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay lại Dashboard</a>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Hình ảnh</th>
            <th>Tên sản phẩm</th>
            <th>Danh mục</th>
            <th>Giá</th>
            <th>Tồn kho</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>
                    <img src="@(item.ImageUrl ?? "https://via.placeholder.com/50")" style="width: 50px; height: 50px; object-fit: cover;" />
                </td>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@item.Price.ToString("N0")</td>
                <td>@item.Stock</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Đang bán</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Ngừng bán</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-primary">Sửa</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>