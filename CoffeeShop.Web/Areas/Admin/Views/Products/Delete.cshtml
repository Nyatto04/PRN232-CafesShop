@using Shared.Dtos.ProductDtos
@model ProductDto

@{
    ViewData["Title"] = "Xác nhận Xóa Sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa (ngừng bán) sản phẩm này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Model.ProductName
        </dd>
        <dt class="col-sm-2">
            Danh mục
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class="col-sm-2">
            Giá
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("N0") VNĐ
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="@Model.ProductId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
    </form>
</div>